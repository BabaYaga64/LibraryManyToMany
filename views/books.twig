<html>
    <head>
        <title>Library</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <h1>Library</h1>
        <h3>Books in our Records:</h3>

        <form action="/books" method="post">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title">

            <label for="genre">Genre:</label>
            <input type="text" name="genre" id="genre">

            <label for="name">Author's Name</label>
            <input type="text" name="name" id="name">

            <label for="copy"># of Copies</label>
            <input type="int" name="copy" id="copy">

            <button type="submit">Add book.</button>
        </form>


        {% if books is not empty %}
            <p>Here are our books:</p>
        <ul>
        {% for book in books %}
            <li><a href="/books/{{ book.getId }}">{{ book.getTitle }}</a></li>
        {% endfor %}

            <form action="/delete_books" method="post">
            <button name="submit">Delete books</button>
            </form>
        </ul>

        {% else %}
            <p>We have no books. Please fund our library.</p>
        {% endif %}

        <a href="/"><p>Home</p></a>
        <a href="/authors"><p>Authors</p></a>


    </body>
</html>
